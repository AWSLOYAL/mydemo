name: CI/CD Pipeline

on:
  push:
    branches:
      - master

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Build Docker image
        run: docker build -t my-ci-cd-app:latest .

      - name: Log in to Docker Hub (optional, for pushing to a registry)
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_TOKEN }}

      - name: Push Docker image to Docker Hub (optional)
        run: docker push my-ci-cd-app:latest

      - name: Deploy to Server (using SSH and Docker Compose)
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USERNAME }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            cd /path/to/your/app/on/server # Replace with actual path
            docker-compose down # Stop existing containers
            docker-compose pull # Pull the latest image (if using a registry)
            docker-compose up -d # Start new containers
